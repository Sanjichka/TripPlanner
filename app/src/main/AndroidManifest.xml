<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tripplanner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EditNoteActivity"
            android:parentActivityName=".NoteDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".NoteDetailsActivity"
            android:parentActivityName=".FilesListActivity"
            android:exported="true" />
        <activity
            android:name=".FilesListActivity"
            android:parentActivityName=".TripsListActivity"
            android:exported="true" />
        <activity
            android:name=".PlusTripActivity"
            android:exported="true"
            android:parentActivityName=".TripsListActivity" />
        <activity
            android:name=".SignInActivity"
            android:exported="true"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".TripsListActivity"
            android:exported="true" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>